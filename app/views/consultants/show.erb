<%= @consultant.email %>
<%= @consultant.admin ? 'Administrator' : 'Agent' %>

<form action='/consultants/<%= @consultant.id %>/edit' method='GET'><input type='submit' value='Edit'></form>
<form action='/consultants/<%= @consultant.id %>' method='POST'><input type="hidden" name="_method" value="DELETE"><input type='hidden' value=''><input type='submit' value='Delete'></form>

<% if @tickets %>
  <h3>Tickets</h3>
  <% @tickets.each do |ticket| %>
    <a href='/tickets/<%= ticket.id %>'><%= ticket.name %></a><br />
  <% end %>
<% end %>
